{% extends 'base.html.twig' %}

{% block title %}Evenement
{% endblock %}

{% block body %}
	<div class="container">
		<div class="showEvenement">
			{% if evenement.image is null %}
				<img src="{{ asset('img/theatre.jpg') }}" alt="Image théâtre">
			{% else %}
				<img src="{{ asset('uploads/images/' ~ evenement.image) }}" alt="{{ evenement.titre }}">
			{% endif %}
			<h1>{{ evenement.titre }}</h1>
			<p>{{ evenement.description }}</p>
			<p>Nombre de place:
				{{ evenement.nbPlace }}</p>
			<p>Prix:
				{{ evenement.prix }}€</p>
			<div class="loginAncre">
				<a href="{{ path('app_evenement_index') }}">Retour à la liste</a>
			</div>
			<div class="loginAncre">
				<a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">Modifier</a>
			</div>

			{{ include('evenement/_delete_form.html.twig') }}
		</div>

	</div>
{% endblock %}
